@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
    <h4>All Product List</h4>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="NewProduct" asp-action="Index" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add New Product
			</a>
		</div>
	</div>
    <br /><br />

    <table class="table table-bordered table-striped">
        
            <tr>
                <th>ProductID</th>
                <th>Name</th>
                <th>Category</th>
                <th>CategoryID</th>
                <th>ShortDescription</th>
                <th>Price</th>
            </tr>
            @foreach (Product product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.Category.CategoryName</td>
                    <td>@product.CategoryId</td>
                    <td>@product.ShortDescription</td>
                    <td>@product.Price</td>
                           
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="AllProduct" asp-action="Edit" asp-route-productId="@product.ProductId"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                             <a asp-controller="AllProduct" asp-action="Delete" asp-route-productId="@product.ProductId"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>

					    </div>
			        </td>
                </tr> 
            }
 
    </table>
</div>